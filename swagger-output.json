{
  "swagger": "2.0",
  "info": {
    "title": "Meta API",
    "description": "Rest API documentation",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/api/posts/": {
      "get": {
        "tags": [
          "posts"
        ],
        "description": "取得依分頁取得貼文",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "分頁數",
            "type": "string"
          },
          {
            "name": "q",
            "in": "query",
            "description": "查詢",
            "type": "string"
          },
          {
            "name": "sort",
            "in": "query",
            "description": "排序 ( arc || desc ) ",
            "type": "string"
          },
          {
            "name": "like",
            "in": "query",
            "description": "user id 查看我按讚的文章",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "取得分頁資料",
            "schema": {
              "$ref": "#/definitions/PostPage"
            }
          }
        }
      },
      "post": {
        "tags": [
          "posts"
        ],
        "summary": "新增貼文",
        "description": "",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "貼文資料",
            "required": true,
            "schema": {
              "$ref": "#/definitions/PostBody"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "新增成功",
            "schema": {
              "$ref": "#/definitions/Post"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "posts"
        ],
        "description": "刪除全部貼文",
        "parameters": [],
        "responses": {
          "200": {
            "description": "刪除成功"
          }
        }
      }
    },
    "/api/posts/{id}": {
      "get": {
        "tags": [
          "posts"
        ],
        "description": "取得指定 ID 貼文",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "取得單筆資料",
            "schema": {
              "$ref": "#/definitions/Post"
            }
          }
        }
      },
      "patch": {
        "tags": [
          "posts"
        ],
        "description": "更新貼文",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "貼文 Id"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "貼文資料",
            "required": true,
            "schema": {
              "$ref": "#/definitions/PostBody"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "更新成功",
            "schema": {
              "$ref": "#/definitions/Post"
            }
          },
          "404": {
            "schema": {
              "type": "string",
              "example": "查無貼文",
              "xml": {
                "name": "main"
              }
            },
            "description": "更新失敗"
          }
        }
      },
      "delete": {
        "tags": [
          "posts"
        ],
        "description": "刪除指定 ID 貼文",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "刪除成功"
          },
          "404": {
            "schema": {
              "type": "string",
              "example": "查無貼文",
              "xml": {
                "name": "main"
              }
            },
            "description": "刪除失敗"
          }
        }
      }
    }
  },
  "definitions": {
    "Post": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "example": "6274caa22a6bd4d1ecd8af05"
        },
        "content": {
          "type": "string",
          "example": "貼文內容"
        },
        "likes": {
          "type": "number",
          "example": 0
        },
        "image": {
          "type": "string",
          "example": "https://unsplash.com/photos/gKXKBY-C-Dk"
        }
      },
      "required": [
        "content"
      ]
    },
    "PostBody": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "example": "貼文內容"
        },
        "user": {
          "type": "string",
          "example": "628e32cb7e25476fec99ff8d"
        },
        "image": {
          "type": "string",
          "example": "https://unsplash.com/photos/gKXKBY-C-Dk"
        }
      },
      "required": [
        "content",
        "user"
      ]
    }
  }
}